<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="CENTER" stylesheets="@../../../styles.css" styleClass="add-entry-form" hgap="10" vgap="10" prefWidth="400.0" prefHeight="300.0" xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.passwordmanagerfx.EditEntryFormController">

    <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="title" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="email" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="password" promptText="Password" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Label text="Confirm Password:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="confirmPassword" promptText="Password" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <Button text="Cancel" onAction="#handleCancel" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <Button text="Save Changes" onAction="#handleSave" GridPane.rowIndex="4" GridPane.columnIndex="1" />
</GridPane>
